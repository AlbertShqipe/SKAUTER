<!DOCTYPE html>
<html>
  <head>
    <title>Admin – Skauter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="admin-layout" data-controller="lightbox">
    <header class="admin-header">
      <div class="admin-header-left">
        <strong class="admin-logo">Skauter Admin</strong>
        <nav class="admin-nav">
          <%= link_to "Locations", admin_locations_path, class: "admin-link" %>
          <%= link_to "Counties", admin_counties_path, class: "admin-link" %>
        </nav>
      </div>

      <div class="admin-header-right">
        <%= link_to "Back to site", root_path, class: "admin-link muted" %>
        <%= button_to "Logout",
              destroy_user_session_path,
              method: :delete,
              class: "admin-button danger",
              form_class: "inline-form" %>
      </div>
    </header>

    <main class="admin-container">
      <%= yield %>
      <div id="lightbox"
          data-lightbox-target="overlay"
          hidden>

        <button class="lightbox-close"
                data-action="click->lightbox#close">×</button>

        <button class="lightbox-arrow left"
                data-action="click->lightbox#prev">‹</button>

        <div class="lightbox-track"
            data-lightbox-target="track"></div>

        <button class="lightbox-arrow right"
                data-action="click->lightbox#next">›</button>
      </div>
    </main>
  </body>
</html>
