<div class="region-show">
  <section class="region-hero" style="<%= "background-image: url(#{url_for(@county.cover_image)})" if @county.cover_image.attached? %>; background-size: cover; background-position: center; overflow: hidden;">
    <div class="overlay">
      <div class="hero-content">

        <%= link_to "← Back to Home", root_path, class: "back-link" %>

        <h1><%= @county.name %></h1>
        <p class="tagline">Urban Energy & Contrasts</p>

        <p class="description">
          Albania’s capital blends brutalist communist architecture with vibrant modern life.
          From iconic landmarks to hidden gems, <%= @county.name %> offers unique filming locations.
        </p>
      </div>
    </div>
  </section>
  <section class="locations-section">
    <div class="section-header-show">
      <h2>Available Locations</h2>
      <span><%= pluralize(@locations.count, "location") %> in <%= @region %></span>

      <%= link_to "View on Map", "#", class: "map-btn" %>
    </div>

    <div class="locations-grid">
      <% @locations.each do |location| %>
        <%= render "locations/card", location: location %>
      <% end %>
    </div>
  </section>
</div>
