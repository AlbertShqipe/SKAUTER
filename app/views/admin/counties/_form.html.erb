<div class="admin-card">
  <%= form_with model: [:admin, @county], local: true, class: "admin-form" do |f| %>
  <div class="form-section">
      <h3>County information</h3>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :cover_image %>
        <%= f.file_field :cover_image %>

        <% if @county.cover_image.attached? %>
          <div class="preview">
            <%= image_tag @county.cover_image.variant(resize_to_limit: [300, 200]) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
